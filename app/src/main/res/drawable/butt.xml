<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#1f00ea" />
            <gradient android:angle="-90" android:startColor="#000000" android:endColor="#ecefef"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#1822b1" />
            <solid android:color="#0f2196"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#1e1e1e" />
            <gradient android:angle="-90" android:startColor="#3bfc0643" android:endColor="#e90721" />
        </shape>
    </item>

</selector>