<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
        <item android:state_pressed="true" >
            <shape android:shape="rectangle"  >
                <corners android:radius="3dip" />
                <stroke android:width="1dip" android:color="#1f00ea" />
                <gradient android:angle="-90" android:startColor="#000000" android:endColor="#ecefef"  />
            </shape>
        </item>
        <item android:state_focused="true">
            <shape android:shape="rectangle"  >
                <corners android:radius="3dip" />
                <stroke android:width="1dip" android:color="#1822b1" />
                <solid android:color="#0f2196"/>
            </shape>
        </item>
        <item >
            <shape android:shape="rectangle"  >
                <corners android:radius="3dip" />
                <stroke android:width="1dip" android:color="#1b1b1b" />
                <gradient android:angle="-90" android:startColor="#e0e0e0" android:endColor="#8d8d8d" />
            </shape>
        </item>

</selector>