<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="4"
    android:rowCount="4"
    android:layout_margin="2dp"
    android:orientation="vertical">

        <Button
            android:text="9"
            android:id="@+id/b9"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_columnWeight="0"
            android:layout_rowWeight="0"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            />
        <Button
            android:text="6"
            android:id="@+id/b6"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_columnWeight="0"
            android:layout_rowWeight="0"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
        />
    <Button
        android:text="3"
        android:id="@+id/b3"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_columnWeight="0"
        android:layout_rowWeight="0"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
    />
    <Button
        android:text="."
        android:id="@+id/bdot"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_columnWeight="0"
        android:layout_rowWeight="0"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        />
    <Button
        android:text="8"
        android:id="@+id/b8"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_columnWeight="0"
        android:layout_rowWeight="0"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        />
    <Button
        android:text="5"
        android:id="@+id/b5"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_columnWeight="0"
        android:layout_rowWeight="0"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        />
    <Button
        android:text="2"
        android:id="@+id/b2"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_columnWeight="0"
        android:layout_rowWeight="0"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        />
    <Button
        android:text="0"
        android:id="@+id/b0"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_columnWeight="0"
        android:layout_rowWeight="0"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        />
    <Button
        android:text="7"
        android:id="@+id/b7"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_columnWeight="0"
        android:layout_rowWeight="0"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        />
    <Button
        android:text="4"
        android:id="@+id/b4"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_columnWeight="0"
        android:layout_rowWeight="0"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        />
    <Button
        android:text="1"
        android:id="@+id/b1"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_columnWeight="0"
        android:layout_rowWeight="0"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        />
    <Button
        android:text="="
        android:id="@+id/beq"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_columnWeight="0"
        android:layout_rowWeight="0"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        />
    <Button
        android:text="+"
        android:id="@+id/bpl"
        android:layout_height="wrap_content"
        android:layout_width="75dp"
        android:textAlignment="center"
        android:layout_columnWeight="0"
        android:layout_rowWeight="0"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        />
    <Button
        android:text="-"
        android:id="@+id/bmin"
        android:layout_height="wrap_content"
        android:layout_width="75dp"
        android:layout_columnWeight="0"
        android:layout_rowWeight="0"
        android:textAlignment="center"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        /><Button
    android:text="*"
    android:id="@+id/bstar"
    android:layout_height="wrap_content"
    android:layout_width="75dp"
    android:layout_columnWeight="0"
    android:layout_rowWeight="0"
    android:layout_marginTop="2dp"
    android:layout_marginLeft="2dp"
    android:textAlignment="center"
    android:layout_marginRight="2dp"
    />
    <Button
        android:text="/"
        android:id="@+id/bdiv"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:layout_width="75dp"
        android:layout_columnWeight="0"
        android:layout_rowWeight="0"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
  />
</GridLayout>